{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug webscraping-books",
      "type": "debugpy",
      "request": "launch",
      "module": "src.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      }
    }
  ]
}




